<div class = "contact-form">
  <%= form_tag('/contact_email', method: 'POST', class: "pure-form pure-form-stacked") do %>
    <%= email_field_tag(:email, nil, placeholder: "Your Email Address") %>
    <%= text_area_tag(:message, nil, placeholder: "Message") %>
    <%= submit_tag("Send Message", class: "pure-button pure-button-primary") %>
  <% end %>
</div>