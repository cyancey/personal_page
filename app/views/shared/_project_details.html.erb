<div class = "project-details horizontal-stripe">
  <div class = "pure-g">
    <div class = "pure-u-1 project-name">
      <h2><%= link_to project.name, "#{project.url}", target: "blank" %></h2>
    </div>

    <div class = "pure-u-1 pure-u-md-1-2">
      <div class = "project-image">
        <%= link_to image_tag(project.image_path), "#{project.url}", target: "blank" %>
      </div>
    </div>

    <div class = "pure-u-1 pure-u-md-1-2 project-content-container">
      <div class = "project-content">
        <div class = "project-description">
          <p><%= project.description %></p>
        </div>

        <div class = "project-technologies">
          <% project.technologies.each do |technology| %>
            <%= link_to image_tag(technology.image_path, class: "pure-img"), "#{technology.url}", target: "blank" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>