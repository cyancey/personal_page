<div class = "project-details horizontal-stripe">
  <div class = "project-name">
    <h2><%= project.name %></h2>
  </div>
  <div class = "pure-g">
    <div class = "pure-u-1-2">
      <div class = "project-image">
        <%= image_tag(project.image_path, class: "pure-img") %>
      </div>
    </div>

    <div class = "pure-u-1-2">
      <div class = "project-description">
        <h3>Description</h3>
        <p><%= project.description %></p>
      </div>

      <div class = "project-technologies">
        <% project.technologies.each do |technology| %>
          <%= image_tag(technology.image_path, class: "pure-img") %>
        <% end %>
      </div>
    </div>
  </div>
</div>